+      price_def: priceDEF,
+      ratio,
+      timestamp: serveRespond[0].timestamp > serveRespond[1].timestamp ? serverRespond[0].timestamp : serverRespond[1].timestamp,
+      upper_bound: upperBound;
+      lower_bound: lowerBound;
+      trigger_alert: (ratio > upperBound || ration < lowerBound) ? ratio : undefined,
+    };
   }
